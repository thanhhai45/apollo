      .about-page__why-box
        = image_tag "about/creative.svg", alt: "about/creative.svg"
        p = t("about_us_page.card.title_4")
      .about-page__why-box
        = image_tag "about/jet.svg", alt: "about/jet.svg"
        p = t("about_us_page.card.title_5")
