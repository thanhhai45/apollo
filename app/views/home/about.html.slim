        = image_tag "about/support.svg", alt: "about/support.svg"
        p = t("about_us_page.card.title_8")
      .about-page__why-box
        = image_tag "about/arm.svg", alt: "about/arm.svg"
        p = t("about_us_page.card.title_9")
