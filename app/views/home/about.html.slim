      p.title CTO & Founder
    .about-page__founder-story
      p.title = t("about_us_page.founder.title")
      .story
        = t("about_us_page.founder.description_1")
        br/
        br/
        = t("about_us_page.founder.description_2")
        br/
        br/
        = t("about_us_page.founder.description_3")
        br/
        br/
        = t("about_us_page.founder.description_4")
      .about-page__read-more data-content="#{I18n.locale}" = t("options.read_more")
