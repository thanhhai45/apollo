        = image_tag "about/share.svg", alt: "about/share.svg"
        p = t("about_us_page.card.title_6")
      .about-page__why-box
        = image_tag "about/contract.svg", alt: "about/contract.svg"
        p = t("about_us_page.card.title_7")
